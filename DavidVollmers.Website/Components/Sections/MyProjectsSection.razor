@inherits IgnisComponentBase
@inject IStringLocalizer<Resources> Resources

<section class="px-6 py-32 lg:px-8" aria-labelledby="projects">
    <div class="mx-auto max-w-3xl text-base leading-7 text-gray-300">
        <h1 id="projects" class="mt-2 text-3xl font-bold tracking-tight text-gray-100 sm:text-4xl">
            @Resources["MyProjectsHeading"]
        </h1>
        <div class="grid grid-cols-1 gap-x-8 gap-y-16 text-center lg:grid-cols-@_repos.Length mt-16">
            @foreach (var repo in _repos)
            {
                <div @key="repo" class="mx-auto flex max-w-xs flex-col gap-y-4">
                    <a href="https://github.com/DavidVollmers/@repo" class="hover:bg-white/10">
                        <img src="https://github-readme-stats.vercel.app/api/pin/?username=DavidVollmers&repo=@repo&theme=transparent&title_color=f3f4f6&icon_color=f3f4f6&text_color=d1d5db&hide_border=true" alt="@repo"/>
                    </a>
                </div>
            }
        </div>
    </div>
</section>

@code
{
    private readonly string[] _repos = { "Ignis" };
}